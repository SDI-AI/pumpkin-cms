{
  "openapi": "3.0.1",
  "info": {
    "title": "Pumpkin CMS API",
    "description": "A flexible, headless CMS API for managing pages, forms, and content with multi-tenant support",
    "contact": {
      "name": "Pumpkin CMS",
      "url": "https://github.com/sdi-ai/pumpkin-cms"
    },
    "version": "v0.2"
  },
  "paths": {
    "/api/forms/{tenantId}/entries": {
      "post": {
        "tags": [
          "Forms"
        ],
        "summary": "Submit a form entry",
        "description": "Submits a new form entry for a specific tenant. Requires API key authentication via Authorization header (Bearer {apiKey})",
        "operationId": "SaveFormEntry",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/FormEntry"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "General"
        ],
        "summary": "Welcome message",
        "description": "Returns a welcome message for the Pumpkin CMS API",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/pages/{tenantId}/{pageSlug}": {
      "get": {
        "tags": [
          "Pages"
        ],
        "summary": "Get a published page by slug",
        "description": "Retrieves a published page by its slug for a specific tenant. Requires API key authentication via Authorization header (Bearer {apiKey})",
        "operationId": "GetPage",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pageSlug",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Pages"
        ],
        "summary": "Update an existing page by slug",
        "description": "Updates an existing page by its slug for a specific tenant. Requires API key authentication via Authorization header (Bearer {apiKey})",
        "operationId": "UpdatePage",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pageSlug",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Page"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Pages"
        ],
        "summary": "Delete a page by slug",
        "description": "Deletes a page by its slug for a specific tenant. Requires API key authentication via Authorization header (Bearer {apiKey})",
        "operationId": "DeletePage",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "pageSlug",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/pages/{tenantId}": {
      "post": {
        "tags": [
          "Pages"
        ],
        "summary": "Create a new page",
        "description": "Creates a new page for a specific tenant. Requires API key authentication via Authorization header (Bearer {apiKey})",
        "operationId": "SavePage",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Page"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/tenant/{tenantId}/sitemap": {
      "get": {
        "tags": [
          "Sitemap"
        ],
        "summary": "Get all published page slugs for sitemap generation",
        "description": "Returns a list of all published page slugs where isPublished=true and includeInSitemap=true. Useful for generating XML sitemaps. Requires API key authentication via Authorization header (Bearer {apiKey})",
        "operationId": "GetSitemapPages",
        "parameters": [
          {
            "name": "tenantId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
